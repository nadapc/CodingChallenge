<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/BarreTop_height"
        android:text="@string/activity_title"
        android:textColor="@color/black"
        android:textSize="@dimen/text_l"
        android:gravity="center"
        android:background="@color/gris"/>


    <ListView
        android:id="@+id/lv_repo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:scrollbarStyle="outsideOverlay"
        android:listSelector="@android:color/transparent"
        android:paddingLeft="@dimen/padding"
        android:paddingRight="@dimen/padding"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/BarreTop_height"
        android:orientation="horizontal"
        android:background="@color/gris"
        android:padding="@dimen/padding"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_trending"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/ic_star_blue"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="@string/activity_btn_trending"
                android:textColor="@color/blue"
                android:textSize="@dimen/text_s"
                android:gravity="center"
                android:background="@color/gris"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/iv_setting"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/ic_setting_gris"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="@string/activity_btn_setting"
                android:textColor="@color/gris_fonce"
                android:textSize="@dimen/text_s"
                android:gravity="center"
                android:background="@color/gris"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>